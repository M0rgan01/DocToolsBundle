{
  "name": "prestashop/doc-tools-bundle",
  "description": "Documentation tools for PrestaShop",
  "keywords": [
    "documentation",
    "parser",
    "prestashop"
  ],
  "license": "MIT",
  "type": "bundle",
  "authors": [
    {
      "name": "PrestaShop SA",
      "email": "contact@prestashop.com"
    },
    {
      "name": "PrestaShop Community",
      "homepage": "http://contributors.prestashop.com/"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "Tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "PrestaShop\\DocToolsBundle\\": ""
    }
  },
  "require": {
    "php": ">=7.1",
    "symfony/symfony": "^3.4 || ^4.4",
    "twig/twig": "^1.38"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.5"
  },
  "scripts": {
    "unit-tests": [
      "@php -d date.timezone=UTC ./vendor/bin/phpunit -c tests/Unit/phpunit.xml"
    ]
  }
}